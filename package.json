{
  "scripts": {
    "js": "rollup -c rollup.config.js --silent",
    "css:sass": "sass dev/scss:dev/css --style expanded --verbose",
    "css:postcss": "postcss dev/css/default.css -u autoprefixer -o dev/css/default.css",
    "css": "npm-run-all -s css:*",
    "build:js": "npm run js",
    "build:sass": "sass dev/scss/default.scss:dev/css/default.rc.css --style expanded --no-source-map",
    "build:postcss": "postcss dev/css/default.rc.css -u autoprefixer -o dev/css/default.rc.css",
    "build:copy_js": "node -e \"require('fs').copyFileSync('./dev/js/mdview.rc.js', './dist/mdview.js')\"",
    "build:copy_css": "node -e \"require('fs').copyFileSync('./dev/css/default.rc.css', './dist/default.css')\"",
    "watch:css": "watch \"npm run css\" ./dev/scss",
    "watch:server": "browser-sync start --config browser-sync.config.js",
    "build": "npm-run-all -p build:*",
    "start": "npm-run-all -p watch:*"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@rollup/plugin-babel": "^5.3.1",
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "rollup": "^2.74.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.52.1",
    "watch": "^1.0.2"
  }
}
